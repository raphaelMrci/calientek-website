style.

    * {
        margin: 0;
        padding: 0;
    }

    body {
        font-family: "my inter", sans-serif;
    }

    a {
        text-decoration: none;
    }

    li {
        list-style: none;
    }

    .logo {
        align: center;
    }

    .navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
        background-color: #2D0933;
        color: #fff;
    }

    .nav-links a {
        color: #fff;
    }

    .menu {
        display: flex;
        gap: 1em;
        font-size: 18px;
    }

    .menu li:hover {
        background-color: #FBA00F;
        border-radius: 5px;
        transition: 0.3s ease;
    }
    .menu li {
        padding: 5px 14px;
    }

    img.logo {
        width : 100px;
        height: 100px;
    }

    .clubs {
        position: relative;
    }

    .dropdown {
        background-color: #FBA00F;
        padding: 1em 0;
        position: absolute; /*WITH RESPECT TO PARENT*/
        display: none;
        border-radius: 8px;
        top: 35px;
    }

    .dropdown li + li {
        margin-top: 10px;
    }

    .dropdown li {
        padding: 0.5em 1em;
        width: 8em;
        text-align: center;
    }

    .dropdown li:hover {
        background-color: #FBA00F;
    }

    .clubs:hover .dropdown {
        display: block;
    }

    .account {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        cursor: pointer;
    }

    a.log-btn {
        padding: 0.5em;
        border-radius: 5px;
        background-color: #FBA00F;
        color: #fff;
        margin: 0 0.5em;
    }

    img#acc-settings {
        height : 50px;
        margin: 0 0.5em;
    }


nav(class="navbar navbar-expand-lg navbar-light")
    a(href="/")
        img.logo(src="/public/logo.png", alt="Calien'tek logo")
    ul.nav-links
        .menu
            li
                a(href="#events") Ev√©nements
            li
                a(href="#shop") Boutique
            li.clubs
                a(href="#clubs") Clubs
                ul.dropdown
                    li
                        a(href="#clubs") BDS
            li
                a(href="#partners") Partenaires
            li
                a(href="#contact") Contact

    div.account
        if (isLoggedIn)
            a(href="/settings")
                img#acc-settings(src="/public/images/profile.png", alt="user profile")

        else
            a.log-btn(href="/login") Connexion
            a.log-btn(href="/register") Inscription

