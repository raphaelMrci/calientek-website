style.

    @font-face {
        font-family: "my inter";
        src: "/public/fonts/inter/Inter-Light.ttf" format("truetype");
    }

    * {
        margin: 0;
        padding: 0;
    }

    body {
        font-family: "my inter", sans-serif;
    }

    a {
        text-decoration: none;
    }

    li {
        list-style: none;
    }

    .navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
        background-color: #2D0933;
        color: #fff;
    }

    .nav-links a {
        color: #fff;
    }

    .menu {
        display: flex;
        gap: 1em;
        font-size: 18px;
    }

    .menu li:hover {
        background-color: #FBA00F;
        border-radius: 5px;
        transition: 0.3s ease;
    }
    .menu li {
        padding: 5px 14px;
    }

    img.logo {
        width : 100px;
        height: 100px;
    }

    .clubs {
        position: relative;
    }

    .dropdown {
        background-color: #FBA00F;
        padding: 1em 0;
        position: absolute; /*WITH RESPECT TO PARENT*/
        display: none;
        border-radius: 8px;
        top: 35px;
    }

    .dropdown li + li {
        margin-top: 10px;
    }

    .dropdown li {
        padding: 0.5em 1em;
        width: 8em;
        text-align: center;
    }

    .dropdown li:hover {
        background-color: #FBA00F;
    }

    .clubs:hover .dropdown {
        display: block;
    }

    .account {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        cursor: pointer;
    }

    .account a {
        padding: 0.5em;
        border-radius: 5px;
        background-color: #FBA00F;
        color: #fff;
        margin: 0 0.5em;
    }


nav(class="navbar navbar-expand-lg navbar-light")
    a(href="/")
        img.logo(src="/public/logo.png", alt="Calien'tek logo")
    ul.nav-links
        .menu
            li
                a(href="#") Evénements
            li
                a(href="#") Boutique
            li.clubs
                a(href="#") Clubs
                ul.dropdown
                    li
                        a(href="#") BDS
            li
                a(href="#") Partenaires
            li
                a(href="#") Contact

    div.account
        if (isLoggedIn)
            //- TODO : Ajouter un bouton pour se déconnecter
        else
            a(href="/login") Connexion
            a(href="/register") Inscription
